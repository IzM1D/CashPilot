<RootWidget>:
    ScreenManager:
        id: sm

        MainScreen:
            name: "main"

        RecordScreen:
            name: "record"

        CategoryScreen:
            name: "categories"

        AddCategoryScreen:
            name: "addcategory"

        HistoryScreen:
            name: "history"

        OperationDetailScreen:
            name: "operation_detail"



# ======================================================================
#                               MAIN SCREEN
# ======================================================================

<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # --- Верхние две кнопки ---
        Button:
            text: 'Операции'
            font_size: '14sp'
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            size_hint: 0.28, 0.14
            pos_hint: {"center_x": 0.25, "center_y": 0.8}
            on_release:
                app.open_categories_for_history()

        Button:
            text: 'Записать операцию'
            font_size: '14sp'
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            size_hint: 0.28, 0.14
            pos_hint: {"center_x": 0.75, "center_y": 0.8}
            on_release:
                app.open_categories_for_record()

        Label:
            text: 'У тебя все получится!'
            font_size: '30sp'
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.6}


        # ==================================================================
        #                   БЛОК С ДВУМЯ КРУГОВЫМИ ДИАГРАММАМИ
        # ==================================================================
        FloatLayout:
            size_hint: None, None
            size: dp(350), dp(320)
            pos_hint: {"center_x": 0.5, "center_y": 0.35}

            # ---- ЛЕВАЯ ДИАГРАММА (Доходы) ----
            Label:
                id: income_label
                text: 'Доходы'
                font_size: '24sp'
                color: 0, 0, 0, 1
                opacity: 0
                pos_hint: {'center_x': 0.25, 'center_y': 0.78}

            PieAnimatedChart:
                id: pie_income
                size_hint: None, None
                size: dp(200), dp(200)
                pos_hint: {"center_x": 0.25, 'center_y': 0.42}

            # ---- ПРАВАЯ ДИАГРАММА (Расходы) ----
            Label:
                id: expense_label
                text: 'Расходы'
                font_size: '24sp'
                color: 0, 0, 0, 1
                opacity: 0
                pos_hint: {'center_x': 0.75, 'center_y': 0.78}

            PieAnimatedChart:
                id: pie_expense
                size_hint: None, None
                size: dp(200), dp(200)
                pos_hint: {"center_x": 0.75, 'center_y': 0.42}



# ======================================================================
#                             HISTORY SCREEN
# ======================================================================

<HistoryScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("categories", "slide_left")

        Label:
            text: "История операций"
            font_size: 24
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        RecycleView:
            id: history_rv
            viewclass: "OperationItem"
            size_hint: 0.95, 0.75
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)
                orientation: "vertical"



# ======================================================================
#                      OPERATION DETAIL SCREEN
# ======================================================================

<OperationDetailScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("history", "slide_left")

        Label:
            text: root.operation_text
            font_size: '14sp'
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}



# ======================================================================
#                    SHARED ELEMENTS / TEMPLATES
# ======================================================================

<MyToggleButton@ToggleButton>:
    allow_no_selection: False



# ======================================================================
#                          RECORD SCREEN
# ======================================================================

<RecordScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("categories", "slide_right")

        Label:
            text: "Записать операцию"
            font_size: 24
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        TextInput:
            id: operation
            hint_text: 'Впишите операцию'
            size_hint: 0.5, 0.07
            pos_hint: {"center_x": 0.4, "center_y": 0.45}

        Button:
            text: "Ввод"
            size_hint: 0.17, 0.07
            pos_hint: {"center_x": 0.75, "center_y": 0.45}
            on_press:
                root.add_operation()

        MyToggleButton:
            id: income
            text: 'Доход'
            group: 'record'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.3, 'center_y': 0.35}

        MyToggleButton:
            id: expense
            text: 'Расход'
            group: 'record'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.7, 'center_y': 0.35}



# ======================================================================
#                      CATEGORIES WIDGET (INSIDE SCREEN)
# ======================================================================

<CategoriesWidget>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_back_from_categories()

        Label:
            id: info_label
            text: "У вас нет категорий"
            font_size: '25sp'
            color: 0, 0, 0, 1
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.8, None
            height: dp(40)
            pos_hint: {"center_x": 0.5, "y": 0.86}

        Button:
            text: '+'
            size_hint: 0.8, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.07}
            on_release:
                app.go_to("addcategory", "slide_left")

        RecycleView:
            id: rv
            viewclass: "CategoryButton"
            size_hint: 0.95, 0.7
            pos_hint: {"center_x": 0.5, "top": 0.86}

            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 0.75, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(8)



# ======================================================================
#                       RECYCLER VIEW ITEMS
# ======================================================================

<OperationItem@FloatLayout>:
    size_hint_y: None
    height: dp(50)

    op_id: 0
    full_text: ""
    short_text: ""

    Button:
        text: root.short_text
        size_hint: 0.85, 1
        pos_hint: {"x": 0, "y": 0}
        on_release:
            app.open_operation_detail(root.full_text)

    Button:
        size_hint: 0.23, 1
        pos_hint: {"right": 1.1, "y": 0}
        background_normal: ''
        background_color: 156/255, 156/255, 156/255, 1
        on_release:
            app.delete_operation(root.op_id)



<CategoryButton@FloatLayout>:
    size_hint_y: None
    height: dp(50)
    bg_color: 1,1,1,1
    category_id: 0
    text: ""

    Button:
        text: root.text
        background_normal: ''
        background_color: root.bg_color
        size_hint: 0.85, 1
        pos_hint: {"x": 0, "y": 0}
        on_release:
            app.category_selected(root.category_id, root.text)

    Button:
        size_hint: 0.23, 1
        pos_hint: {"right": 1.1, "y": 0}
        background_normal: ''
        background_color: 156/255, 156/255, 156/255, 1
        on_release:
            app.delete_category(root.category_id)



# ======================================================================
#                           CATEGORY SCREEN
# ======================================================================

<CategoryScreen>:
    FloatLayout:
        CategoriesWidget:
            id: category_widget



# ======================================================================
#                       ADD CATEGORY SCREEN
# ======================================================================

<AddCategoryScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("categories", "slide_right")

        Label:
            text: 'Добавление категорий'
            font_size: '25sp'
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        TextInput:
            id: category_input
            hint_text: 'Впишите название категории'
            size_hint: 0.6, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            multiline: False

        GridLayout:
            id: color_grid
            cols: 4
            rows: 3
            size_hint: 0.75, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.37}

        Button:
            id: addcategory
            text: 'Добавить'
            size_hint: 0.6, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            on_release:
                root.add_category()

        Label:
            id: msg_label
            font_size: "24sp"
            text_size: (self.width, "60dp")
            halign: "center"
            valign: "middle"
            size_hint_x: None
            width: "320dp"
            height: self.text_size[1]
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
