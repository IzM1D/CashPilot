<RootWidget>:

    ScreenManager:
        id: sm

        MainScreen:
            name: "main"
        RecordScreen:
            name: "record"
        CategoryScreen:
            name: "categories"
        AddCategoryScreen:
            name: "addcategory"
        HistoryScreen:
            name: "history"
        OperationDetailScreen:
            name: "operation_detail"



<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Операции'
            font_size: '14sp'
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            shorten: False
            size_hint: 0.28, 0.14
            pos_hint: {"center_x": 0.25, "center_y": 0.8}
            on_release:
                app.open_categories_for_history()

        Button:
            text: 'Записать операцию'
            font_size: '14sp'
            text_size: self.width, self.height
            halign: "center"
            valign: "middle"
            shorten: False
            size_hint: 0.28, 0.14
            pos_hint: {"center_x": 0.75, "center_y": 0.8}
            on_release:
                app.open_categories_for_record()

        Label:
            text: 'У тебя все получится!'
            font_size: '30sp'
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            color: 0, 0, 0, 1

        # Контейнер для диаграммы — по центру, чуть ниже заголовка
        # --- Две диаграммы рядом ---
        FloatLayout:
            size_hint: None, None
            size: dp(360), dp(320)
            pos_hint: {"center_x": 0.5, "center_y": 0.35}

            # ---- Левая диаграмма: ДОХОДЫ ----
            Label:
                id: label_income
                text: 'Доходы'
                font_size: '24sp'
                pos_hint: {'center_x': 0.25, 'center_y': 0.65}
                color: 0, 0, 0, 1

            PieAnimatedChart:
                id: pie_chart_income
                size_hint: None, None
                size: dp(300), dp(300)
                pos_hint: {"center_x": 0.267, 'center_y': 0.28}

            # ---- Правая диаграмма: РАСХОДЫ ----
            Label:
                id: label_expense
                text: 'Расходы'
                font_size: '24sp'
                pos_hint: {'center_x': 0.75, 'center_y': 0.65}
                color: 0, 0, 0, 1

            PieAnimatedChart:
                id: pie_chart_expense
                size_hint: None, None
                size: dp(300), dp(300)
                pos_hint: {"center_x": 0.767, 'center_y': 0.28}




# --- остальные экраны оставлены без изменений (копируем из присланного вами kv) ---
<HistoryScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("categories", "slide_left")

        Label:
            text: "История операций"
            font_size: '24sp'
            text_size: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.87}
            font_size: 24
            color: 0, 0, 0, 1

        RecycleView:
            id: history_rv
            viewclass: "OperationItem"
            size_hint: 0.95, 0.75
            pos_hint: {"center_x": 0.5, "center_y": 0.45}

            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"
                spacing: dp(8)


<OperationDetailScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("history", "slide_left")

        Label:
            text: root.operation_text
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            color: 0,0,0,1
            font_size: '14sp'


<MyToggleButton@ToggleButton>:
    allow_no_selection: False



<RecordScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("categories", "slide_right")

        Label:
            text: "Записать операцию"
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            font_size: 24
            color: 0, 0, 0, 1

        TextInput:
            id: operation
            hint_text: 'Впишите операцию'
            pos_hint: {"center_x": 0.4, "center_y": 0.45}
            size_hint: 0.5, 0.07

        Button:
            id: Input
            text: "Ввод"
            size_hint: 0.17, 0.07
            pos_hint: {"center_x": 0.75, "center_y": 0.45}
            height: 50
            on_press:
                root.add_operation()

        MyToggleButton:
            id: income
            text: 'Доход'
            group: 'record'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.3, 'center_y': 0.35}

        MyToggleButton:
            id: expense
            text: 'Расход'
            group: 'record'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.7, 'center_y': 0.35}



<CategoriesWidget>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_back_from_categories()

        Label:
            id: info_label
            text: "У вас нет категорий"
            color: 0, 0, 0, 1
            font_size: '25sp'
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.8, None
            height: dp(40)
            pos_hint: {"center_x": 0.5, "y": 0.86}

        Button:
            text: '+'
            size_hint: 0.8, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.07}
            on_release:
                app.go_to("addcategory", "slide_left")

        RecycleView:
            id: rv
            viewclass: "CategoryButton"
            size_hint: 0.95, 0.7
            pos_hint: {"center_x": 0.5, "top": 0.86}

            RecycleBoxLayout:
                id: box
                default_size: None, dp(50)
                default_size_hint: 0.75, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(8)


<OperationItem@FloatLayout>:
    size_hint_y: None
    height: dp(50)

    op_id: 0
    full_text: ""
    short_text: ""

    Button:
        text: root.short_text
        size_hint: 0.85, 1
        pos_hint: {"x": 0, "y": 0}
        on_release:
            app.open_operation_detail(root.full_text)

    Button:
        size_hint: 0.23, 1
        pos_hint: {"right": 1.1, "y": 0}
        background_normal: ''
        background_color: 156/255, 156/255, 156/255, 1
        on_release:
            app.delete_operation(root.op_id)


<CategoryButton@FloatLayout>:
    size_hint_y: None
    height: dp(50)
    bg_color: 1,1,1,1
    category_id: 0
    text: ""

    Button:
        text: root.text
        background_normal: ''
        background_color: root.bg_color
        size_hint: 0.85, 1
        pos_hint: {"x": 0.1, "y": 0}
        on_release:
            app.category_selected(root.category_id, root.text)

    Button:
        text: 'X'
        font_size: '24sp'
        size_hint: 0.23, 1
        pos_hint: {"right": 1.2, "y": 0}
        background_normal: ''
        background_color: 156/255, 156/255, 156/255, 1
        on_release:
            app.delete_category(root.category_id)



<CategoryScreen>:
    FloatLayout:
        CategoriesWidget:
            id: category_widget



<AddCategoryScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("categories", "slide_right")

        Label:
            text: 'Добавление категорий'
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            font_size: '25sp'
            color: 0, 0, 0, 1

        TextInput:
            hint_text: 'Впишите название категории'
            size_hint: 0.6, 0.08
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            multiline: False
            id: category_input

        GridLayout:
            id: color_grid
            cols: 4
            rows: 3
            size_hint: 0.75, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.37}

        Button:
            id: addcategory
            text: 'Добавить'
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            size_hint: 0.6, 0.08
            on_release:
                root.add_category()

        Label:
            id: msg_label
            font_size: "24sp"
            size_hint_x: None
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            width: "320dp"
            text_size: (self.width, "60dp")
            height: self.text_size[1]
            halign: "center"
            valign: "middle"
