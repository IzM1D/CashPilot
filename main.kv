<RootWidget>:

    ScreenManager:
        id: sm

        MainScreen:
            name: "main"
        OperationScreen:
            name: "operations"
        RecordScreen:
            name: "record"
        CategoryScreen:
            name: "categories"



<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Операции'
            font_size: '14sp'
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            shorten: False
            size_hint: 0.28, 0.14
            pos_hint: {"center_x": 0.25, "center_y": 0.8}
            on_release:
                app.go_to("operations", "slide_right")

        Button:
            text: 'Записать операцию'
            font_size: '14sp'
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            shorten: False
            size_hint: 0.28, 0.14
            pos_hint: {"center_x": 0.75, "center_y": 0.8}
            on_release:
                app.go_to("categories", "slide_left")

        Label:
            text: 'У тебя все получится!'
            font_size: '30sp'
            pos_hint: {"center_x": 0.5, "center_y": 0.40}
            color: 0, 0, 0, 1

<OperationScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "<--"
            size_hint: 0.2, 0.05
            pos_hint: {"center_x": 0.13, "center_y": 0.97}
            height: 50
            on_release:
                app.go_back("main")
        Label:
            text: "Это экран с операциями"
            font_size: 24
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
<RecordScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "<--"
            size_hint: 0.2, 0.05
            pos_hint: {"center_x": 0.13, "center_y": 0.97}
            height: 50
            on_release:
                app.go_to("categories", "slide_right")
        Label:
            text: "Записать операцию"
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            font_size: 24
            color: 0, 0, 0, 1

        TextInput:
            id: operation
            hint_text: 'Впишите операцию'
            pos_hint: {"center_x": 0.4, "center_y": 0.45}
            size_hint: 0.5, 0.07

        Button:
            id: Input
            text: "Ввод"
            size_hint: 0.17, 0.07
            pos_hint: {"center_x": 0.75, "center_y": 0.45}
            height: 50
            on_press:
                root.send_text()

        ToggleButton:
            text: 'Доход'
            group: 'record'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.3, 'center_y': 0.35}

        ToggleButton:
            text: 'Расход'
            group: 'record'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.7, 'center_y': 0.35}

<CategoriesWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        # кнопка назад
        Button:
            text: "<--"
            size_hint: 0.18, 0.06
            pos_hint: {"x": 0.02, "top": 0.98}
            on_release:
                app.go_to("main", "slide_right")

        # надпись "нет категорий"
        Label:
            id: info_label
            text: "У вас нет категорий"
            color: 0, 0, 0, 1
            font_size: '22sp'
            halign: "center"
            valign: "middle"
            text_size: self.size
            size_hint: 0.8, None
            height: dp(40)
            pos_hint: {"center_x": 0.5, "y": 0.86}

        Button:
            text: '+'
            size_hint: 0.8, 0.07
            pos_hint: {"center_x": 0.5, "center_y": 0.07}

        # область для RecycleView
        RecycleView:
            id: rv
            viewclass: "CategoryButton"
            size_hint: 0.8, 0.7      # ширина=80% экрана, высота=70%
            pos_hint: {"center_x": 0.5, "y": 0.14}

            RecycleBoxLayout:
                id: box
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(8)



<CategoryButton@Button>:
    font_size: '18sp'
    size_hint_x: 1
    size_hint_y: None
    on_release:
        app.open_category_screen(self.category_id, self.text, 'left')

<CategoryScreen>:
    id: category_screen

    CategoriesWidget:
        id: category_widget

